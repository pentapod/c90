// Core (Main Style)
body
  font-size: 14px
  letter-spacing: -0.01em
  word-spacing: 0.2em
  line-height: 1.8

p
  margin: 1em 0

.invisible
  font-size: 0
  line-height: 0

section
  position: relative

h1, h2, h3
  margin: 1em 0
  color: #2192b7

ul, ol
  padding-left: 1em

header
  $header-height = 45vw
  $header-bottom-area = 4vw
  $stripe-top = 1vw
  $stripe-height = 6vw
  $xs-header-height = 110vw
  $xs-header-bottom-area = 7vw
  $xs-stripe-top = 0
  $xs-stripe-height = 0

  background: linear-gradient(135deg, #69cfe4 0, #2787a7 100%)
  //background-color: #2192b7
  position: relative
  height: $header-height
  overflow: hidden
  @media $mq-xs
    height: $xs-header-height

  .stripe
    position: absolute
    top: $stripe-top
    width: 100%
    height: $stripe-height
    background: #ffffff
    @media $mq-xs
      top: $xs-stripe-top
      height: $xs-stripe-height

  .crest
    position: absolute
    top: $stripe-top + $stripe-height
    width: 100%
    height: $header-height - $stripe-top - $stripe-height
    background-image: url(../images/dots.svg)
    background-size: 32px
    background-position: center
    background-repeat: repeat
    background-attachment: fixed
    @media $mq-xs
      top: $xs-stripe-top + $xs-stripe-height
      height: $xs-header-height - $xs-stripe-top - $xs-stripe-height

  .title
    position: absolute
    //bottom: calc(-0.3vw - 8px)
    top: $stripe-top + $stripe-height + 3vw
    left: 5vw
    width: 50vw
    @media $mq-xs
      top: $xs-stripe-top + $xs-stripe-height + 10vw
      left: 3vw
      width: 94vw

  .cover
    position: absolute
    width: 60vw
    right: 5vw
    bottom: $header-bottom-area - 1vw
    @media $mq-xs
      width: 100vw
      right: 0
      bottom: $xs-header-bottom-area - 2vw

  .credit
    position: absolute
    bottom: 0
    right: 10vw
    font-size: 12px
    @media $mq-xs
      right: 20px

  .ribbon
    position: absolute
    top: -0.6vw
    right: 2vw
    width: 10vw
    text-align: center
    @media $mq-xs
      top: -3vw
      right: 0
      width: 20vw

  &:before
    content: " "
    position: absolute
    width: 100%
    height: $header-bottom-area
    bottom: 0
    background-color: #ffffff
    @media $mq-xs
      height: $xs-header-bottom-area

section.lead
  h2
    font-size: 200%
    line-height: 1.8
    letter-spacing: 0.1em
    .alphabet
      letter-spacing: 0
    @media $mq-xs
      font-size: 150%
      letter-spacing: 0

section.detail
  padding: 60px 0
  @media $mq-sm
    padding: 0

  h3
    font-size: 105%
    letter-spacing: 0.4em

  .recommend li
    font-size: 120%
    letter-spacing: -0.04em
    line-height: 1.9

  .toc li
    font-size: 90%

section.spec
  $sample-image-width = 4833px
  $sample-image-height = 800px
  $sample-height = 300px
  $spec-bg = #ddd6d4

  padding: 60px 0
  background-color: $spec-bg
  @media $mq-sm
    padding: 0

  .l-container
    position: relative
    z-index: 100

  th
    text-align: left
    min-width: 5em
    font-weight: normal
  td
    padding: 12px
  strong
    color: #2192b7
    font-size: 160%
    font-weight: 700
    line-height: 1.3
  .btn
    margin: 0 1em
    vertical-align: top
    padding: 0.3em 0.8em

  @keyframes sample
    0%
      transform: translate3d(0, 0, 0)
    100%
      transform: translate3d(
        - $sample-image-width * $sample-height / $sample-image-height,
        0, 0)

  .sample
    position: absolute
    top: 35px
    right: 0
    width: 60%
    overflow: hidden
    @media $mq-sm
      position: relative
      top: 0
      width: 100%
      padding: 1.5em 0

    &:before
      content: " "
      display: block
      height: $sample-height
      width: 10000px
      background-image: url(../images/sample.png)
      background-size: contain
      animation: sample 40s linear infinite

    &:after
      content: " "
      display: block
      position: absolute
      top: 0
      left: 0
      width: 10%
      height: $sample-height
      background: linear-gradient(90deg,
        $spec-bg 0,
        transparentify($spec-bg, $spec-bg, 0) 100%)
      @media $mq-sm
        display: none


section.info
  padding: 60px 0
  @media $mq-sm
    padding: 0

  h3
    font-size: 105%
    letter-spacing: 0.4em

  share-btn($color)
    background-color: $color
    color: #fff
    border-color: $color
    &:hover
      background-color: darken($color, 15%)
      color: #fff
      border-color: darken($color, 15%)

  .catalog
    share-btn(#3f9d25)
  .twitter
    share-btn(#55acee)
  .facebook
    share-btn(#365899)
  .hatebu
    share-btn(#008fde)

  .about p
    color: #888
    font-size: 90%

footer
  margin-bottom: 90px

  .acknowledgement
    text-align: center
    line-height: 50px
    margin-left: -25px

    a.react-logo
      position: absolute
      width: 50px
      height: 50px
      background-image: url(../images/react_logo.svg)
      background-size: 100%

.questionnaire
  $bg = #ed5a6c
  display: block
  position: fixed
  bottom: 0
  transform: translate3d(0, 0, 0)
  z-index: 1000
  width: 100%
  padding: 15px 0
  text-align: center
  background-color: $bg
  color: #ffffff
  text-decoration: none

  &.hidden
    transform: translate3d(0, 80px, 0)

  &:hover
    color: #ffffff
    text-decoration: underline
    background-color: darken($bg, 10%)

